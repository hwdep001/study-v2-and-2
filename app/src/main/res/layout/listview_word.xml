<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/wordlist_minheight"
    android:background="@color/contentBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/listview_word_level"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            />

        <LinearLayout
            android:id="@+id/listview_word_headll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wordlist_head_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listview_word_head1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wordlist_head_height"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="22dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/listview_word_head2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_0"
                android:paddingLeft="20dp"
                android:gravity="top"
                android:paddingTop="2dp"
                android:textSize="15dp"
                android:textColor="@color/darkgray"
                />


        </LinearLayout>
        <!-- head layout -->

        <LinearLayout
            android:id="@+id/listview_word_bodyll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wordlist_body_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listview_word_body1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wordlist_body1_height"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:background="@drawable/border_top"
                />

            <TextView
                android:id="@+id/listview_word_body2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wordlist_body2_height"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="@color/darkgray"
                />

        </LinearLayout>
        <!-- body layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/border_top">

            <ImageView
                android:id="@+id/listview_word_up"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@mipmap/ic_thumb_up_black_24dp"/>

            <TextView
                android:id="@+id/listview_word_etc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:textColor="#949494"
                android:textSize="12dp"/>

            <ImageView
                android:id="@+id/listview_word_down"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.15"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@mipmap/ic_thumb_down_black_24dp"/>

        </LinearLayout>
        <!-- foot layout -->

    </LinearLayout>
    <!-- table layout -->

</LinearLayout>